{
  "rules": {
    "agreement-details": {
      "$detail": {
        ".read": "data.child('viewers').hasChildren([auth.uid])"
      }
    },
    "agreement-edits": {
      "$edit": {
        ".read": "data.child('viewers').hasChildren([auth.uid])"
      }
    },
    "users": {
      "$userID": {
        ".read": "auth.uid == $userID"
      }
    },
    "users-agreement-types": {
      "$userID": {
        ".read": "auth.uid == $userID"
      }
    },
    "users-dashboard-agreements": {
      "$userID": {
        ".read": "auth.uid == $userID"
      }
    }
  }
}
